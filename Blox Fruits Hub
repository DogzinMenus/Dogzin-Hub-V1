-- Carregar Kaio UI
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("DogzinHub V1 - Funcional", "Ocean")

-- Referência do frame principal da UI (Kaio UI usa um ScreenGui com um Frame dentro)
local mainGui = game:GetService("CoreGui"):WaitForChild("KavoUI") or game.Players.LocalPlayer.PlayerGui:WaitForChild("KavoUI")
local dragFrame = mainGui:FindFirstChildWhichIsA("Frame", true)

-- Torna o frame arrastável
if dragFrame then
    dragFrame.Active = true
    dragFrame.Draggable = true
end

-- Abas
local MainTab = Window:NewTab("Main")
local MainSection = MainTab:NewSection("Funções principais")

-- Configuração
local Settings = {
    FastAttack = false
}

-- Fast Attack
MainSection:NewToggle("Fast Attack", "Ataca rapidamente com a arma equipada", function(value)
    Settings.FastAttack = value
end)

-- Loop de ataque rápido
spawn(function()
    while task.wait() do
        if Settings.FastAttack then
            local Player = game.Players.LocalPlayer
            local Tool = Player.Character and Player.Character:FindFirstChildOfClass("Tool")
            if Tool then
                pcall(function()
                    for i = 1, 3 do
                        Tool:Activate()
                    end
                end)
            end
        end
    end
end)
