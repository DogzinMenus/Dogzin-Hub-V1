local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()

-- Criar a UI, mas manter oculta inicialmente
local Window = Library.CreateLib("DogzinHub V1 - Blox Fruits", "Ocean")
Window.MainFrame.Visible = false -- Oculta ao criar

-- Toggle para abrir/fechar a UI
local toggleKey = Enum.KeyCode.Insert -- Você pode mudar a tecla

local userInputService = game:GetService("UserInputService")
userInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == toggleKey then
        Window.MainFrame.Visible = not Window.MainFrame.Visible
    end
end)

-- Criando as Tabs normalmente
local TabMain = Window:NewTab("Main")
local TabFarm = Window:NewTab("Auto Farm")
local TabBoss = Window:NewTab("Bosses")
local TabMastery = Window:NewTab("Mastery")
local TabTP = Window:NewTab("Teleport")
local TabMisc = Window:NewTab("Misc")
local TabVisual = Window:NewTab("Visual")

-- Para o conteúdo rolável, Kavo UI não tem scroll nativo nas tabs, mas as tabs geralmente têm bastante espaço.
-- Se precisar de muitos elementos, a Kavo UI já adiciona um scrollbar automaticamente.
-- Se quiser um container rolável dentro de uma tab, precisaríamos criar um ScrollingFrame manualmente.
-- Mas como o Kavo UI já trata isso, vamos manter assim para simplicidade.

-- Fast Attack
TabMain:NewToggle("Ativar Fast Attack", "Ativa ataques rápidos", function(v)
    _G.FastAttack = v
    while _G.FastAttack do
        -- Coloque seu código de ataque rápido aqui
        wait()
    end
end)

-- Auto Kill Boss
TabBoss:NewDropdown("Selecionar Boss", "Escolha um Boss para farmar", {"Boss 1", "Boss 2", "Boss 3"}, function(selected)
    _G.SelectedBoss = selected
end)
TabBoss:NewToggle("Auto Kill Boss", "Ataca automaticamente o boss selecionado", function(v)
    _G.AutoKillBoss = v
    while _G.AutoKillBoss do
        -- Código para atacar boss automaticamente
        wait()
    end
end)

-- Auto Farm Mastery
TabMastery:NewToggle("Auto Farm Mastery", "Farmar maestria automaticamente", function(v)
    _G.FarmMastery = v
    while _G.FarmMastery do
        -- Código para farmar maestria
        wait()
    end
end)

-- Sniper de Frutas
TabMisc:NewToggle("Sniper de Frutas", "Pega frutas automaticamente do mapa", function(v)
    _G.FruitSniper = v
    while _G.FruitSniper do
        -- Código para pegar frutas automaticamente
        wait()
    end
end)

-- Teleporte para ilhas
TabTP:NewButton("Ir para Sky Island", "Teleporta para Sky Island", function()
    game.Players.LocalPlayer.Character:MoveTo(Vector3.new(-7900, 5587, -2212))
end)

-- Trocar Sea
TabTP:NewDropdown("Trocar Sea", "Escolha um Sea", {"First", "Second", "Third"}, function(sea)
    local seas = {
        ["First"] = 2753915549,
        ["Second"] = 4442272183,
        ["Third"] = 7449423635
    }
    if seas[sea] then
        game:GetService("TeleportService"):Teleport(seas[sea], game.Players.LocalPlayer)
    end
end)

-- Visual ESP
TabVisual:NewToggle("Mostrar Jogadores", "Mostra todos os jogadores com ESP", function(v)
    _G.ShowPlayersESP = v
    while _G.ShowPlayersESP do
        -- Código para mostrar jogadores
        wait()
    end
end)

TabVisual:NewToggle("Mostrar Frutas", "Mostra todas as frutas no mapa", function(v)
    _G.ShowFruitsESP = v
    while _G.ShowFruitsESP do
        -- Código para mostrar frutas
        wait()
    end
end)
