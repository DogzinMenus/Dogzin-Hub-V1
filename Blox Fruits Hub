local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("DogzinHub V1 - Funcional", "Ocean")

-- Espera carregar o Kavo UI e pega o Frame principal da UI (que é filho do ScreenGui)
local mainGui = game:GetService("CoreGui"):WaitForChild("KavoUI") or game.Players.LocalPlayer.PlayerGui:WaitForChild("KavoUI")
local mainFrame = mainGui:FindFirstChildWhichIsA("Frame", true)

-- Torna o frame arrastável
mainFrame.Active = true
mainFrame.Draggable = true

-- Cria um ScrollingFrame dentro do mainFrame para conteúdo rolável
local scrollingFrame = Instance.new("ScrollingFrame")
scrollingFrame.Name = "ScrollingContent"
scrollingFrame.Parent = mainFrame
scrollingFrame.BackgroundTransparency = 1
scrollingFrame.Size = UDim2.new(1, -20, 1, -40) -- Ajuste o tamanho para caber dentro do frame
scrollingFrame.Position = UDim2.new(0, 10, 0, 30)
scrollingFrame.CanvasSize = UDim2.new(0, 0, 5, 0) -- Altura grande para ativar a rolagem
scrollingFrame.ScrollBarThickness = 6
scrollingFrame.VerticalScrollBarInset = Enum.ScrollBarInset.Always

-- Move os filhos do mainFrame para dentro do scrollingFrame
for _, child in pairs(mainFrame:GetChildren()) do
    if child:IsA("GuiObject") and child ~= scrollingFrame then
        child.Parent = scrollingFrame
    end
end

-- Abas e seções continuam normais
local MainTab = Window:NewTab("Main")
local MainSection = MainTab:NewSection("Funções principais")

local Settings = { FastAttack = false }

MainSection:NewToggle("Fast Attack", "Ataca rapidamente com a arma equipada", function(value)
    Settings.FastAttack = value
end)

spawn(function()
    while task.wait() do
        if Settings.FastAttack then
            local Player = game.Players.LocalPlayer
            local Tool = Player.Character and Player.Character:FindFirstChildOfClass("Tool")
            if Tool then
                pcall(function()
                    for i = 1, 3 do
                        Tool:Activate()
                    end
                end)
            end
        end
    end
end)
